{
  "expo": {
    "name": "wordsmith",
    "slug": "dictionary",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/anvilLogo.svg",
    "userInterfaceStyle": "light",
    "scheme": "wordsmith",
    "splash": {
      "image": "./assets/anvilSketch.svg",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.wordsmith.app",
      "buildNumber": "1.0.0"
    },
    "android": {
      "package": "com.wordsmith.app",
      "versionCode": 1,
      "intentFilters": [
        {
          "action": "SEND",
          "autoVerify": true,
          "data": [
            {
              "mimeType": "text/*"
            },
            {
              "mimeType": "image/*"
            }
          ],
          "category": "DEFAULT"
        }
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "extra": {
      "eas": {
        "projectId": "acc8812b-a55b-4d81-89ba-07d6877910ea"
      }
    },
    "platforms": [
      "ios",
      "android",
      "web"
    ],
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera."
        }
      ],
      [
        "./plugins/withAndroidShareExtension/index",
        {
          "androidIntentFilters": [
            "text/*",
            "image/*"
          ]
        }
      ]
    ]
  }
}